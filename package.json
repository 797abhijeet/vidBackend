{
  "name": "captionify-backend",
  "version": "1.0.0",
  "description": "Backend for video captioning application",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "nodemon --exec ts-node src/index.ts",
    "dev:watch": "tsc-watch --onSuccess \"node dist/index.js\"",
    "test": "echo \"No tests specified\" && exit 0",
    "clean": "rm -rf dist uploads/* outputs/* remotion-bundle/*",
    "prepare": "npm run build"
  },
  "dependencies": {
    "@remotion/bundler": "^4.0.198",
    "@remotion/renderer": "^4.0.198",
    "assemblyai": "^4.22.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.0",
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.2",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.10.2",
    "nodemon": "^3.1.9",
    "ts-node": "^10.9.2",
    "tsc-watch": "^6.2.1",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "video",
    "captioning",
    "ffmpeg",
    "remotion",
    "assemblyai"
  ],
  "author": "Captionify Team",
  "license": "MIT"
}
